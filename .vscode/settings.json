{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "file",
	"editor.wordWrap": "on",
	"[php]": {
		"editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer"
	},
	"prettier.configPath": ".config/.prettierrc.json",
	"prettier.ignorePath": ".config/.prettierignore",
	"phpCodeSniffer.autoExecutable": true,
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"[markdown]": {
		"files.trimTrailingWhitespace": false
	},
	"jest.autoRun": {
		"onStartup": false
	},
	"phpCodeSniffer.exclude": [ "**/vendor/**", "**/node_modules/**" ],
	"phpCodeSniffer.standard": "Custom",
	"phpCodeSniffer.standardCustom": ".config/.phpcs.xml.dist",
	"intelephense.diagnostics.run": "onSave",
	"intelephense.environment.phpVersion": "8.1.0",
	"intelephense.format.enable": false,
	"intelephense.stubs": [
		"apache",
		"bcmath",
		"bz2",
		"calendar",
		"com_dotnet",
		"Core",
		"ctype",
		"curl",
		"date",
		"dba",
		"dom",
		"enchant",
		"exif",
		"FFI",
		"fileinfo",
		"filter",
		"fpm",
		"ftp",
		"gd",
		"gettext",
		"gmp",
		"hash",
		"iconv",
		"imap",
		"intl",
		"json",
		"ldap",
		"libxml",
		"mbstring",
		"meta",
		"mysqli",
		"oci8",
		"odbc",
		"openssl",
		"pcntl",
		"pcre",
		"PDO",
		"pdo_ibm",
		"pdo_mysql",
		"pdo_pgsql",
		"pdo_sqlite",
		"pgsql",
		"Phar",
		"posix",
		"pspell",
		"random",
		"readline",
		"Reflection",
		"session",
		"shmop",
		"SimpleXML",
		"snmp",
		"soap",
		"sockets",
